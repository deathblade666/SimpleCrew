version: '3.8'

services:
  finance-app:
    build: .
    ports:
      - "8080:8080"
    volumes:
      - ./data:/app/data  # Saves your DB to a folder named 'data' next to this file
    environment:
      - BEARER_TOKEN=YOUR_CREW_BEARER_TOKEN_HERE
      - LUNCHFLOW_API_KEY=YOUR_LUNCHFLOW_API_KEY_HERE  # Optional: only needed if using LunchFlow
